{
  "rules": {
    ".read": false,
    ".write": false,
    "competition": {
      ".read": true,
      ".write": "auth != null",
      "operatives": {
        "$index": {
          ".validate": "newData.isString() && newData.val().length <= 12 && newData.val().length >= 1 && newData.val().matches('^[A-Za-z0-9]+$')"
        }
      },
      "scores": {
        "$scoreKey": {
          ".validate": "($scoreKey.matches('^[0-9]{4}-[0-9]{2}-[0-9]{2}::[A-Za-z0-9]{1,12}::(steps|workouts|sleep|hydration|streak)$')) && newData.isNumber() && newData.val() >= 0 && newData.val() <= 200000 && newData.val() == newData.val()"
        }
      },
      "userBindings": {
        "$uid": {
          ".validate": "newData.isString() && newData.val().length <= 12 && newData.val().length >= 1 && newData.val().matches('^[A-Za-z0-9]+$')"
        }
      }
    }
  }
}
